<section class="d-flex flex-column justify-content-center align-items-center" style="height: 75vh;">
  <h2>Create a Dream Catcher Account</h2>
  <div class="mt-4">
    <form method="POST" action="/signup" class="form-inline">
      <div class="form-group">
        <label class="mx-2">Username</label>
        <input type="text" class="form-control mx-2" name="username">
      </div>
      <div class="form-group">
        <label class="mx-2">Email</label>
        <input type="email" class="form-control mx-2" name="email">
      </div>
      <div class="form-group">
        <label class="mx-2">Password</label>
        <input type="password" class="form-control mx-2" name="password">
      </div>
      <input type="submit" class="btn btn-info">
    </form>
  </div>
  <img src="../img/noun_Dreamcatcher.png" class="img-fluid d-block mx-auto mt-4" alt="Responsive image" width="250">
</section>
