<h2>Record a Dream</h2>

<form method="POST" action="/dreams">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Dream Name: </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group row">
    <label for="dreamDetails" class="col-sm-2 col-form-label">Dream Details: </label>
    <div class="col-sm-10">
      <textarea class="form-control" id="dreamDetails" rows="3"></textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">Themes</div>
    <div class="col-sm-10">
      <div class="form-check">
        <%@dreams.each do |dream|%>
        <input class="form-check-input" type="checkbox" name=""id="gridCheck1">
        <label class="form-check-label" for="gridCheck1">
          Example checkbox
        </label>
        <%end%>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>
</form>
