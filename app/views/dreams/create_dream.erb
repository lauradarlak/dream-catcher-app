<section class="mx-5 pt-5">
  <h2>Record a Dream</h2>
  <p class="lead">Make space for dreams to come through.</p>
  <hr>
  <% if flash.has?(:new_dream) %>
  <div class="alert alert-warning" role="alert">
    <%= flash[:new_dream] %>
  </div>
  <% end %>
  <form method="POST" action="/dreams">
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label"><strong>Dream Name</strong></label>
      <div class="col-sm-10">
        <input type="text" name="dream[name]" class="form-control" id="inputEmail3">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputDate" class="col-sm-2 col-form-label"><strong>Dream Date</strong></label>
      <div class="col-sm-10">
        <input type="date" name="dream[dream_date]" class="form-control" id="inputDate">
      </div>
    </div>
    <div class="form-group row">
      <label for="dreamDetails" class="col-sm-2 col-form-label"><strong>Dream Details</strong></label>
      <div class="col-sm-10">
        <textarea class="form-control" name="dream[dream_details]" id="dreamDetails" rows="3"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2"><strong>Themes</strong></div>
      <div class="col-sm-10">
        <%Theme.all.each do |theme|%>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="dream[theme_ids][]" value="<%=theme.id%>" id="gridCheck1">
          <label class="form-check-label" for="gridCheck1">
            <%=theme.name%>
          </label>
        </div>
        <%end%>
      </div>
    </div>
    <div class="form-group row">
      <label for="newTheme" class="col-sm-2 col-form-label"><strong>Add a New Theme</strong></label>
      <div class="col-sm-10">
        <input class="form-ccontrol" type="text" name="theme[name]">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-info">Add Dream</button>
      </div>
    </div>
  </form>
</section>
