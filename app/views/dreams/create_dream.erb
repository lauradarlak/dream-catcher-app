<h2>Record a Dream</h2>

<form method="POST" action="/dreams">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Dream Name: </label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group row">
    <label for="dreamDetails" class="col-sm-2 col-form-label">Dream Details: </label>
    <div class="col-sm-10">
      <textarea class="form-control" name="dream_details" id="dreamDetails" rows="3"></textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">Themes</div>
    <div class="col-sm-10">
      <%Theme.all.each do |theme|%>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" name="themes[]" value="<%=theme.id%>" id="gridCheck1">
        <label class="form-check-label" for="gridCheck1">
          <%=theme.name%>
        </label>
      </div>
      <%end%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Add Dream</button>
    </div>
  </div>
</form>
